          <div id="content" class="content">
            <div id="posts" class="posts-expand">
              {{#post-list}}
              <div style="opacity: 1; display: block; transform: translateY(0px);" class="post post-type-normal">
                <div class="post-header">
                  <h1 class="post-title">
                    <a class="post-title-link" href="{{uri}}">
                      {{title}}
                    </a>
                  </h1>

                  <div class="post-meta">
                    <span class="post-time">
                      发表于 {{date}}
                    </span>

                    <span class="post-category">
                      &nbsp; | &nbsp; 分类于
                      <a href="{{{category-uri}}}/{{{category}}}">{{{category}}}</a>
                    </span>

                    {{#disqus-comment}}
                        <span class="post-comments-count">
                            &nbsp; | &nbsp;
                            <!-- <a href="{{site-domain}}{{uri}}#disqus_thread"></a> -->
                            <a href="{{site-domain}}{{uri}}#comments"><span class='disqus-comment-count' data-disqus-identifier="{{uri}}"></span></a>
                        </span>
                    {{/disqus-comment}}
                    {{#duoshuo-comment}}
                        <span class="post-comments-count">
                            &nbsp; | &nbsp;
                            <!-- <a href="{{site-domain}}{{uri}}#disqus_thread"></a> -->
                            <a href="{{site-domain}}{{uri}}#comments"><span class="ds-thread-count" data-thread-key="{{uri}}"></span></a>
                        </span>
                    {{/duoshuo-comment}}
                  </div>
                </div>
                <div class="post-body">
                    {{{description}}}
                </div>

                <div class="post-footer">
                    <div class="post-eof"></div>
                </div>
              </div>
              {{/post-list}}
            </div>

