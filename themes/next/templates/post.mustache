        <div id="content" class="content">
            <div id="posts" class="posts-expand">
                <div style="opacity: 1; display: block; transform: translateY(0px);" class="post post-type-normal">
                    <div class="post-header">
                        <h1 class="post-title">
                            {{{title}}}
                        </h1>

                        <div class="post-meta">
                            <span class="post-time">
                                发表于 {{{date}}}
                            </span>

                            <span class="post-category">
                                &nbsp; | &nbsp; 分类于
                                <a href="{{{post-category-uri}}}">{{{category}}}</a>
                            </span>

                            {{#disqus-comment}}
                                <span class="post-comments-count">
                                    &nbsp; | &nbsp;
                                    <!-- <a href="{{site-domain}}{{uri}}#disqus_thread"></a> -->
                                    <a href="#comments"><span class='disqus-comment-count' data-disqus-identifier="{{uri}}"></span></a>
                                </span>
                            {{/disqus-comment}}
                            {{#duoshuo-comment}}
                                <span class="post-comments-count">
                                    &nbsp; | &nbsp;
                                    <!-- <a href="{{site-domain}}{{uri}}#disqus_thread"></a> -->
                                    <a href="#comments"><span class="ds-thread-count" data-thread-key="{{uri}}"></span></a>
                                </span>
                            {{/duoshuo-comment}}
                        </div>
                    </div>

                    <div class="post-body">
                        {{{post-content}}}
                    </div>

                    <div class="post-footer">

                        <div class="post-nav">
                            <div class="post-nav-prev post-nav-item">
                                {{#next-post}}
                                    <a href="{{{uri}}}">{{{title}}}</a>
                                {{/next-post}}
                            </div>
                            <div class="post-nav-next post-nav-item">
                                {{#prev-post}}
                                    <a href="{{{uri}}}">{{{title}}}</a>
                                {{/prev-post}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
